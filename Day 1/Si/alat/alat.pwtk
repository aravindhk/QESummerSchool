::pwtk::import ../Si.pwtk

set alats "9.7 9.8 9.9 10.0 10.1 10.2 10.3 10.4 10.5 10.6 10.7"

set results [open Etot-vs-alat.dat w] 
foreach alat $alats {

    set head Si.alat-$alat
    outdir [outdir_prefix]/$head
    SYSTEM "celldm(1) = $alat"

    runPW scf.$head
    set Etot [::pwtk::pwo::totene scf.$head.out]

    puts $results "$alat $Etot"
    
} 

close $results
